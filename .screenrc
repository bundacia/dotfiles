#caption splitonly '%{= Kk}%3n %t'
hardstatus alwayslastline '%{= kk}%-w[%{= kr}%51>%n %t%{= kk}]%+w%='

# Turn off annoying visual bell ("Wuff Wuff")
vbell off

# Lots and lots of scrollback
defscrollback 5000

# make screen use a login shell (for rvm https://rvm.io/workflow/screen/)
shell -${SHELL}
