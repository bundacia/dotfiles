#!/usr/bin/perl

use strict;
use warnings;

open FILE1, $ARGV[0];
open FILE2, $ARGV[1];
chomp(my @file1 = <FILE1>);
chomp(my @file2 = <FILE2>);

my %in_f1 = map {$_ => 1} @file1;
my %in_f2 = map {$_ => 1} @file2;

print "ONLY IN $ARGV[0]:\n";
$in_f2{$_} || print("$_\n") for keys %in_f1;

print "ONLY IN $ARGV[1]:\n";
$in_f1{$_} || print("$_\n") for keys %in_f2;
