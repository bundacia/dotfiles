[user]
    name = Trevor Little
    email = trevor@learnersguild.org
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[alias]
    st = status --short
    ci = commit -va
    di = diff
    hist = log --graph --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s' --date-order
    rum = rebase master@{u}
    pr = "!f() { git fetch origin pull/$1/head:pr-$1 && git checkout pr-$1; }; f"
    pull-request = "!f(){ hub pull-request; }; f"
    ush = push
    conflicts = "!f(){ vi $(git diff --name-only --diff-filter=U) '+/<<<'; }; f"

[merge]
    tool = threesome

[mergetool "threesome"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
    trustExitCode = true

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
	pager = less -FXRS -x2
[apply]
	whitespace = nowarn
[branch]
	autosetupmerge = true
[rebase]
	autosquash = true
[diftool "vimdiff"]
	cmd = vimdiff
